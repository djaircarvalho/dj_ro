<section class="search-results">
  <header>
    <h1 class="h3">Tasks</h1>
  </header>
  <ol class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item  clearfix">
        <h2><%= task.title %></h2>
        <h4><%= task.description %> <h4>
        <h4> <%=link_to task.sprint.name, [task.sprint.project,task.sprint] %>,
           <%= link_to task.sprint.project.name, task.sprint.project %></h4>
        <div class="pull-right ">
          <small class='list-group-item list-group-item-info' >Estimated Time: <%= task.estimated_time  %></small>
          <small class='list-group-item list-group-item-info' >Real Time: <%= task.real_time  %></small>
        </div>
        <h5><%= link_to 'Show', [task.sprint.project, task.sprint, task], class: 'btn btn-info' %>
          <% if policy(Task).edit? %>
            <%= link_to 'Edit', edit_project_sprint_task_path(task.sprint.project, task.sprint, task),class: 'btn btn-default' %>
          <% end %>
          <% if policy(Task).destroy? %>
           <%= link_to 'Destroy', [task.sprint.project, task.sprint, task], method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger' %>
          <% end %>
         </h5>
      </li>
    <% end %>
  </ol>
</section>
<% if policy(Task).new? %>
  <%= link_to 'New Task', new_project_sprint_task_path, class: 'btn btn-success' %>
<% end %>  
