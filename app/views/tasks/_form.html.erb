<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :estimated_time %>
    <%= f.time_select :estimated_time %>
  </div>

  <div class="field">
    <%= f.label :real_time %>
    <%= f.time_select :real_time %>
  </div>

  <div class="field">
    <%= f.label :sprint_id %>
    <%= f.select :sprint_id, Sprint.all.collect {|sprint| [ sprint.name, sprint.id ] },{nclude_blank: true,prompt: 'Select Sprint'}, class: 'select2' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
