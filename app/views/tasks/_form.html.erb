
<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation" class = "alert alert-danger fade in">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :estimated_time %>
    <%= f.time_select :estimated_time, {start_hour: 0, end_hour: 200},
    {:class => "select2 "}   %>
  </div>

  <div id="real_time" class="form-group">
    <%= f.label :real_time %>
    <%= f.time_select :real_time, {start_hour: 0, end_hour: 200},
    {:class => "select2 "}   %>
  </div>

  <div class="form-group">
    <%= f.label :sprint_id %>
    <%= f.select :sprint_id, current_user.sprints.all.collect {|sprint| [ sprint.name, sprint.id ] },{nclude_blank: true,prompt: 'Select Sprint'}, class: 'select2 form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save', class: "btn btn-success" %>
  </div>
<% end %>

