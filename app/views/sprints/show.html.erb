<div class="panel panel-default">
    <div class="panel-heading"> <%= @sprint.name %> </div>
    <div class="panel-body">
      <p> <strong> Opening date: </strong><%=  @sprint.opening_date %> </p>
      <p> <strong> Closing date: </strong><%= @sprint.closing_date %></p>
      <p> <strong> Project: </strong><%= link_to @sprint.project.name, @sprint.project %></p>
      <p ><%= @sprint.tasks.size  %> <%= link_to 'tasks', project_sprint_tasks_path(@sprint.project, @sprint) %></p>
    </div>
 </div>

<% if policy(Sprint).edit? %>
  <%= link_to 'Edit', edit_project_sprint_path(@sprint.project, @sprint), class: 'btn btn-info' %>
<% end %>
<%= link_to 'Back', project_sprints_path(@sprint.project) , class: 'btn btn-default' %>
